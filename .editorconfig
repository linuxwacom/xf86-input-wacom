# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{c,h}]
indent_size = 8
indent_style = tab

[*.py]
indent_size = 4
indent_style = space

[*.sh]
indent_size = 4
indent_style = space

[{meson.build,meson_options.txt}]
indent_size = 8
indent_style = tab
